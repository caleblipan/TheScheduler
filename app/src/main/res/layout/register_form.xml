<ScrollView
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:fillViewport="true">
<android.support.constraint.ConstraintLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="30dp"
	    android:paddingTop="30dp"
	    android:paddingRight="30dp"
	    android:paddingBottom="30dp">
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:text="Start registering now" 
		android:textSize="19sp"
		android:textColor="#3abeff"
		android:id="@+id/Title"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toTopOf="parent"
	/>
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:text="And get immediate help with your health issues." 
		android:textSize="14sp"
		android:id="@+id/Caption"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/Title"
	/> 
	<!-- Full Name -->
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="8dp"
		android:text="Email Address" 
		android:textSize="12sp"
		android:id="@+id/EmailAddress"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/Caption"
	/> 
	<EditText
     		android:id="@+id/EmailAddressInput"
     		android:layout_height="wrap_content"
     		android:layout_width="match_parent"
		android:paddingBottom="16dp"
		android:textSize="16sp"
     		android:inputType="textEmailAddress"
		android:hint="youremail@gmail.com"
		android:textColorHint="#cccccc"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/EmailAddressInput"
	/>
	<!-- Password -->
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="8dp"
		android:text="Password" 
		android:textSize="12sp"
		android:id="@+id/Password"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/EmailAddressInput"
	/> 
	<EditText
     		android:id="@+id/PasswordInput"
     		android:layout_height="wrap_content"
     		android:layout_width="wrap_content"
		android:paddingBottom="16dp"
		android:textSize="16sp"
     		android:inputType="textPassword"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/Password"
	/>
	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:id="@+id/CompleteRegisterButton"
		android:background="@drawable/button_rounded"
		android:text="Complete Registration"
		android:textColor="#ffffff"
		android:enabled="false"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintBottom_toBottomOf="parent"
	/>
</android.support.constraint.ConstraintLayout>
</ScrollView>
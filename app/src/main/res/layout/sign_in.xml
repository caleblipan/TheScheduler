<android.support.constraint.ConstraintLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginEnd="32dp"
	    android:paddingLeft="32dp"
	    android:paddingTop="32dp"
	    android:paddingRight="32dp"
	    android:paddingBottom="32dp">
	<ImageView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:id="@+id/imageView"
        	app:layout_constraintLeft_toLeftOf="parent"
        	app:layout_constraintTop_toTopOf="parent"
		android:src="@drawable/idn_green_logo_100x100px"
	/>
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Sign In" 
		android:textSize="22sp"
		android:textStyle="bold"
		android:id="@+id/textView"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/imageView"
	/>
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:text="to continue using this app." 
		android:textSize="18sp"
		android:id="@+id/textView2"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/textView"
	/> 
	<EditText
     		android:id="@+id/PhoneNumber"
     		android:layout_height="wrap_content"
     		android:layout_width="match_parent"
     		android:inputType="phone"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/textView2"
	/>
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:hint="081212345678"
		android:textColorHint="#666666"
		android:id="@+id/nextButtonSignIn"
		android:text="Next"
		android:enabled="false"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/PhoneNumber"
	/>
	<TextView
		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="No account? Create one!" 
		android:clickable="true"
		android:textColor="#008080"
		android:textSize="18sp"
		android:id="@+id/NoAccount"
        	app:layout_constraintStart_toStartOf="parent"
        	app:layout_constraintTop_toBottomOf="@id/nextButtonSignIn"
	/> 
</android.support.constraint.ConstraintLayout>
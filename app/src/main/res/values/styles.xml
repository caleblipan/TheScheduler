<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">#ffffff</item>
		<item name="colorControlNormal">#ffffff</item>
		<item name="colorControlActivated">#ffffff</item>
		<item name="colorControlHighlight">#ffffff</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="AppTheme.NoActionBar">
	</style>
	<!-- ActionBar -->
	<style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        	<item name="android:background">@drawable/action_bar_bg</item>
        	<!-- Support library compatibility -->
        	<item name="background">@drawable/action_bar_bg</item>
	</style>
	<style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowIsFloating">true</item>
		<item name="colorPrimary">#7ed957</item>
		<item name="colorPrimaryDark">#7ed957</item>
		<item name="colorAccent">#7ed957</item>
	</style>

    <style name="SwitchTheme">
		<item name="colorControlActivated">#00C975</item>
	</style>
</resources>
